    <div class="registration-container3">
        <div class="registration-form">
            <h1>New Recipe</h1>
            <form id="recipeForm" action="/" enctype="multipart/form-data" method="post">
                
                <p>Recipe Name:</p>
                <input type="text" id="recipeName" name="recipeName" placeholder="Koshary">
                <p>Recipe Type</p>
                <input list="options" id="dropdownnn" name="dropdownnnr" required>
                <datalist id="options">
                    <option value="Appetizer">
                    <option value="Main Dish">
                    <option value="Dessert">
                </datalist>
                <p>Ingredients:</p>
                <div class="ingredients-container">
                    <div class="ingredient-input">
                        <input type="text" id="newIngredient" name="newIngredient" placeholder="write Ingredients">
                    </div>
                    <div id="ingredientList">
                        <!-- Ingredients will be dynamically added here -->
                    </div>
                </div>
                <p>Recipe:</p>
                <input type="text" id="recipe" name="recipe" placeholder="Serve it with tomato sauce">
                <p>Recipe Image:</p>
                <input type="file" id="recipeImage" name="recipeImage" accept="image/*">
                <button type="submit">Add Recipe</button>
            </form>
     
        </div>
    </div>

    <script>
        document.getElementById('recipeForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            console.log('Submitting form data'); // Debugging line
            
            try {
                const response = await fetch('/', {
                    method: 'POST',
                    body: formData
                });

                if (!response.ok) {
                    const errorText = await response.text();
                    if (errorText.includes('Recipe already exists')) {
                        alert('This recipe already exists.');
                    } else {
                        throw new Error('Failed to submit form');
                    }
                } else {
                    const result = await response.text();
                    console.log('Server response:', result);
                    alert('Recipe added successfully!');
                    window.location.href = '/';
                }
            } catch (error) {
                console.error('Error:', error);
                alert('There was an error adding the recipe.');
            }
        });
    
    </script>


