    <style>.registration-container1 {
        position:absolute;
        top: 56%;
        left: 50%;
        transform: translate(-50%,-50%);
        background-color: rgb(137, 185, 137);
        border-radius: 40px;
        padding: 20px; 
        max-width: 90%;
      }
      
      .registration-form {
        width: 300px; /* Reduce the width of the form */
        height: auto; /* Allow the height to adjust based on content */
        padding: 10px; /* Reduce padding for spacing inside the box */
        border: 1px solid #333; /* Reduce the thickness of the border */
        border-radius: 30px; /* Reduce the radius of the border */
      }
      
      .registration-form h1 {
        font-size: 24px; /* Reduce the font size of the heading */
        margin: 10px 0; /* Reduce margin for the heading */
      }
      
      .registration-form p {
        font-size: 16px; /* Reduce the font size of paragraphs */
        margin: 10px 0; /* Reduce margin for paragraphs */
      }
      
      .registration-form input {
        font-size: 14px; /* Reduce the font size of input fields */
        padding: 8px; /* Reduce padding for input fields */
        margin-bottom: 8px; /* Reduce margin below each input */
      }
      .registration-form {
        width: 300px; /* Reduce the width of the form */
        padding: 10px; /* Reduce padding for spacing inside the box */
        border: 1px solid #333; /* Add a border around the form */
        border-radius: 30px; /* Add rounded corners to the border */
        position: relative; /* Add position relative to the form */
      }
      
      .password-input {
        position: relative; /* Add position relative to the password input container */
      }
      
      .password-input input {
        font-size: 14px; /* Reduce the font size of input fields */
        padding-right: 30px; /* Increase right padding to accommodate the icon */
      }
      .toggle-password {
        position: absolute; /* Position the icon absolutely */
        top: 50%; /* Align the icon vertically to the middle */
        right: 30px; /* Adjust the distance from the right */
        transform: translateY(-50%); /* Center the icon vertically */
        cursor: pointer; 
      }
      .registration-form button {
        font-size: large;
        font-weight: bold;
        margin: 20px 0;
        width: 100%; 
        border: 0;
        border-radius: 40px;
        background-color: rgb(47, 150, 47);
      }
      
      .registration-form button:hover {
        color: aliceblue;
      }
      #dropp {
        border-radius: 30px;
        width: 30%;
        height: 20%;
        font-size: 18px;
    
        color: #999;
      }
