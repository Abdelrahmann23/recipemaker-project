    <div class="registration-container9">
        <div class="registration-form">
            <h1>Add Ingredient</h1>
            <form id="ingredientForm" enctype="multipart/form-data">
                <p>Ingredient name:</p>
                <input type="text" id="ingredientName" name="ingredientName" placeholder="Beef" required>
                <p>Recipe type:</p>
                <input list="options" id="dropdownnn" name="dropdownnn" required>
                <datalist id="options">
                    <option value="appetizer">
                    <option value="main Dish">
                    <option value="dessert">
                </datalist>
                <p>Image for ingredient:</p>
                <input type="file" id="ingredientImage" name="ingredientImage" accept="image/*" required>
                <button type="submit">Add Ingredient</button>
            </form>
        </div>
    </div>
  <script src="index.js"></script>
    <script>
    document.getElementById('ingredientForm').addEventListener('submit', async function (e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        
        try {
            const response = await fetch('/', {
                method: 'POST',
                body: formData
            });

            const result = await response.json();
            if (!response.ok) {
                if (result.message && result.message.includes('Ingredient already exists')) {
                    alert('This ingredient already exists.');
                } else {
                    throw new Error(result.message || 'Failed to submit form');
                }
            } else {
                alert('Ingredient added successfully!');
                window.location.href = result.redirectUrl;
            }
        } catch (error) {
            console.error('Error:', error);
            alert('There was an error adding the ingredient.');
        }
    });
    </script>
